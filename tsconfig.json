{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "assets/*": ["assets/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["src", "scripts", "config"],
  "exclude": ["node_modules"]
}
