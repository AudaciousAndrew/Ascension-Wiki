{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "module": "CommonJS",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowJs": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
