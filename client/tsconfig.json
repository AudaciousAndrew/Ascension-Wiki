{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "allowJs": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "components/*": ["components/*"],
      "utils/*": ["utils/*"],
      "stores/*": ["stores/*"],
      "types/*": ["types/*"],
      "routes/*": ["routes/*"],
      "assets/*": ["assets/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}
